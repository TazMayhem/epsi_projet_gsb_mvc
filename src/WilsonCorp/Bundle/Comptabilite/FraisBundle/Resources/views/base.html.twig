{% extends "::base.html.twig" %}

{% block title 'Gestion comptabilité' %}

    {% block stylesheets %}
    {{ parent() }}
    <link href="{{ asset('bundles/wilsoncorpcomptabilitefrais/css/Application/indexDefault.css') }}" rel="stylesheet" />
    {% endblock %}

    {% block header %}
        {% if app.user %}
            <div class="info-user-band">Bonjour {{ app.user.username }}<span style="float:right; margin-right: 50px; font-size: 1.5rem">{{ "now"|date("d/m/y   H:i ") }}</span></div>
        {% endif %}
        <h1>Galaxy Swiss Bourdin -
    {% endblock %}

    {% block menu %}
        <!-- Le bandeau de gauche -->
        <div id="bandeau">
            <!-- La zone qui contient les icones -->
            <div id="menu">
                <!-- La liste des icones et textes -->
                <a href="{{ path('wilson_corp_comptabilite_frais_homepage') }}" class="menu-item"><span class="glyphicon glyphicon-home" aria-hidden="true"></span> Accueil</a>
                <a href="{{ path('fichefrais_new') }}" class="menu-item"><span class="glyphicon glyphicon-pencil" aria-hidden="true"></span> Saisie</a>
                <a href="{{ path('fichefrais') }}" class="menu-item"><span class="glyphicon glyphicon-eye-open" aria-hidden="true"></span> Consultation</a>
            {% if is_granted('ROLE_COMPTABLE') %}
                <a href="#" class="menu-item"><span class="glyphicon glyphicon-ok" aria-hidden="true"></span> Validation</a>
            {% endif %}
            {% if is_granted('ROLE_ADMIN') %}
                <a href="{{ path('visiteur_new') }}" class="menu-item"><span class="glyphicon glyphicon-plus" aria-hidden="true"></span> Utilisateurs</a>
            {% endif %}
                <a href="#‎" class="menu-item"><span class="glyphicon glyphicon-user" aria-hidden="true"></span> Mon compte</a>
                <a href="{{ path('logout') }}" class="menu-item"><span class="glyphicon glyphicon-remove-circle" aria-hidden="true"></span> Déconnexion</a>
            </div>
        </div>
    {% endblock %}

    {% block footer %}
        {{ parent() }}
    {% endblock %}